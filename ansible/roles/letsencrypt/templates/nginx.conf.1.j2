server {
        listen 80;
        listen [::]:80;
        server_name {{ domain }} www.{{ domain }};
	location ~ /.well-known/ {
		allow all;
		root /var/www/html;
	}
        location / {
                proxy_pass  http://dawn_{{ service_to_encrypt}}:{{ port_to_encrypt }};
                proxy_set_header Host      $host;
                proxy_set_header X-Real-IP $remote_addr;
        }
}

